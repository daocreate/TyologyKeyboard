<resources>

    <dimen name="ambilwarna_hsvHeight">240dp</dimen>
    <dimen name="ambilwarna_hsvWidth">240dp</dimen>
    <dimen name="ambilwarna_hueWidth">30dp</dimen>
    <dimen name="ambilwarna_spacer">8dp</dimen>
    <!-- key_height + key_bottom_gap = popup_key_height -->
    <dimen name="key_height">55dip</dimen>
    <dimen name="candidate_font_height">22dp</dimen>
    <dimen name="candidate_vertical_padding">15dp</dimen>
    <dimen name="key_bottom_gap">0.005in</dimen>
    <dimen name="popup_key_height">60dp</dimen>
    <dimen name="keyboard_top_padding">2dp</dimen>
    <dimen name="keyboard_bottom_padding">0.01in</dimen>
    <dimen name="candidate_strip_height">48dp</dimen>
    <dimen name="candidate_strip_fading_edge_length">63dp</dimen>
    <dimen name="spacebar_vertical_correction">4dp</dimen>
    <!--
         If the screen height in landscape is larger than the below value, then the keyboard
         will not go into extract (fullscreen) mode.
    -->
    <dimen name="max_height_for_fullscreen">2.5in</dimen>
    <dimen name="key_text_size">20dp</dimen>
    <dimen name="key_label_text_size">14dp</dimen>
    <dimen name="key_preview_text_size_large">40dp</dimen>
    <dimen name="key_preview_offset">0dp</dimen>
    <!-- key_preview_text_size_large x 2 -->
    <dimen name="key_preview_height">80dp</dimen>
    <!-- Amount of allowance for selecting keys in a mini popup keyboard by sliding finger. -->
    <!-- popup_key_height x 1.7 -->
    <dimen name="mini_keyboard_slide_allowance">1000dp</dimen>
    <!-- popup_key_height x 1.0 -->
    <dimen name="mini_keyboard_vertical_correction">0dp</dimen>
    <dimen name="key_hysteresis_distance">0.05in</dimen>
    <!--
         We use "inch", not "dp" because this value tries dealing with physical distance related
         to user's finger.
    -->
    <dimen name="keyboard_vertical_correction">-0.05in</dimen>
    <dimen name="candidate_min_touchable_width">0.3in</dimen>

</resources>